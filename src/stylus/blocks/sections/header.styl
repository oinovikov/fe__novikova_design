// header

.header
  position: relative
  display: block
  padding: 0
  margin: 0

  &__body
  &__logo
  &__nav
    position: relative
    display: block
    padding: 0
    margin: 0

  &__body
    display: flex
    flex-flow: column nowrap
    justify-content: flex-start
    align-content: stretch
    align-items: center
    height: px2rem(144)

    @media all and (min-width: getMQWidth(2))
      height: px2rem(160)

    @media all and (min-width: getMQWidth(4))
      flex-direction: row
      height: px2rem(48)
      padding: px2rem((120 - 48) / 2) 0

    @media all and (min-width: getMQWidth(6))
      padding: px2rem((160 - 48) / 2) 0

  &__logo
    flex: 0 0 auto
    margin-top: px2rem(24)
    padding: px2rem((32 - 24) / 2) 0

    @media all and (min-width: getMQWidth(2))
      margin-top: px2rem(32)

    @media all and (min-width: getMQWidth(4))
      padding: px2rem((48 - 24) / 2) 0
      margin-top: 0
      margin-left: auto

    @media all and (min-width: getMQWidth(5))
      padding: px2rem((48 - 30) / 2) 0

  &__nav
    flex: 0 0 auto
    margin-top: px2rem(24)

    @media all and (min-width: getMQWidth(2))
      margin-top: px2rem(32)

    @media all and (min-width: getMQWidth(4))
      order: -1
      margin-top: 0
