// Page base classname
$pageRootClassName = 'page'

// Font options
$font = {
  style: normal,
  variant: normal,
  weight: 400,
  size: 12pt,
  height: 1.25,
  family: "'PT Sans Caption', Verdana, Geneva, sans-serif",
}

// Num columns in responsive layout grid
$grid = 12

// Page layout options
$pageLayout = {
  screens: 0 288 360 432 576 720 864 1008 1152 1296 1440,
  default: 7,
  maxWidth: 864 864 864 864 864 864 864 1008 1152 1296 1440,
  marginSafe: 6 6 12 12 12 12 12 12 12 12 12,
  marginPage: 0 0 0 0 0 0 12 12 12 12 12 12,
  bgColor: #fff,
}

// Preview section options
$previewSection = {
  marginTop: 24 24 32 32 0 0 0 0 0 0 0,
  widePictureBeforeLayout: 4,
}

// About section options
$aboutSection = {
  marginVertical: 32 32 48 48 64 64 96 96 96 96 96,
  fontSize: 14 14 17 17 17 20 20 20 20 20 20,
  lineHeight: 28 28 32 32 32 36 36 36 36 36 36,
  fontFamily: s("'PT Serif Caption', serif"),
  maxWidth: 840,
}

// About section options
$portfolioItem = {
  width: 100% 100% 100% 100% 50% 50% 50% 50% 50% 50% 50%,
}
